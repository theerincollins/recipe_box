<div class="jumbotron container-fluid">
</div>

<section class="ingredients-page">
  <div class="container">

<ul>
  <div class="row">
    <% @types.each() do |type| %>
      <div class="col-sm-2">
        <form action="/ingredients" method="post">
          <li class="types"><u><%= type.description %></u></li>
            <ul>
              <% type.ingredients.each() do |ingredient| %>
                <li class="ingredients"><%= ingredient.description %></li>
              <% end %>
            </ul>

            <div class="form-group">
              <input type="hidden" name="type_id" id="type_id" value="<%= type.id() %>">
              <input type="text" name="description" id="description" class="form-control">
            </div>

            <button type="submit" class="btn btn-success">Add</button>
          </form>
          </div>
      <% end %>
  </div>
</ul>

<div class="container">
  <a href="/" class="btn btn-warning" role="button">Return Home</a></button>
</div>
</section>
</div>
